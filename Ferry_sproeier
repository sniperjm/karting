<script>
  if ('serviceWorker' in navigator) {
    window.addEventListener('load', () => {
      navigator.serviceWorker.register('./sw.js');
    });
  }

  // ====== CONSTANTEN ======
  const R_d = 287.058;
  const R_v = 461.495;
  const RHO_STD = 1.225;
  const G = 9.80665;
  const MOLAR_MASS_DRY_AIR = 0.0289644;
  const UNIVERSAL_GAS_CONSTANT = 8.314462618;
  const LAPSE_RATE = 0.0065;
  const SEA_LEVEL_TEMP_K = 288.15;
  const SEA_LEVEL_PRESSURE_HPA = 1013.25;

  const MODES = {
    prisma: { baseline: 133, slope: 1.47 },
    rule:   { baseline: null, slope: 1.0 } // baseline uit input
  };

  // ====== FYSICA FUNCTIES ======
  function es_hPa(Tc){
    return 6.112 * Math.exp((17.62 * Tc) / (243.12 + Tc));
  }

  function computeDensity(Tc, P_hPa, RH){
    const T = Tc + 273.15;
    const P = P_hPa * 100;
    const e = es_hPa(Tc) * (RH/100);
    const e_Pa = e * 100;
    const Pd = P - e_Pa;
    return (Pd / (R_d * T)) + (e_Pa / (R_v * T));
  }

  function densityPercentDelta(rho){
    if (!isFinite(rho)) return NaN;
    return ((rho - RHO_STD) / RHO_STD) * 100.0;
  }

  function standardPressureAtAltitude(altitudeMeters){
    if (!isFinite(altitudeMeters) || altitudeMeters <= 0) {
      return SEA_LEVEL_PRESSURE_HPA;
    }

    const ratio = 1 - (LAPSE_RATE * altitudeMeters) / SEA_LEVEL_TEMP_K;
    const exponent = (G * MOLAR_MASS_DRY_AIR) / (UNIVERSAL_GAS_CONSTANT * LAPSE_RATE);
    return SEA_LEVEL_PRESSURE_HPA * Math.pow(Math.max(ratio, 1e-6), exponent);
  }

  function seaLevelToStationPressure(mslPressure, altitudeMeters, tempC){
    if (!isFinite(mslPressure) || !isFinite(altitudeMeters) || altitudeMeters <= 0) {
      return mslPressure;
    }

    const T = Math.max(tempC + 273.15, 1);
    const exponent = (G * MOLAR_MASS_DRY_AIR * altitudeMeters) / (UNIVERSAL_GAS_CONSTANT * T);
    return mslPressure / Math.exp(exponent);
  }

  function clamp(v, lo, hi){
    return Math.max(lo, Math.min(hi, v));
  }

  // ====== SPROEIER BEREKENING ======
  function recommendJet(rho, mode, baselineInput){
    const dPct = densityPercentDelta(rho);
    let baseline = baselineInput;

    if(mode === 'prisma'){
      baseline = MODES.prisma.baseline;
    }

    let slope = (mode === 'prisma') ? MODES.prisma.slope : MODES.rule.slope;
    let jet = baseline + dPct * slope;
    jet = Math.round(jet);

    return clamp(jet, 115, 155);
  }

  // ====== BOUGIE LOGICA ======
  function recommendPlug(rho){
    if (!isFinite(rho)) return { icon: "‚ö†Ô∏è", text: "Onbekend ‚Äì vul geldige data in" };
    if (rho > 1.220) return { icon: "üî•", text: "Denso IW24 (gap 0.6 mm)" };
    if (rho < 1.200) return { icon: "‚ùÑÔ∏è", text: "Denso IW29 (gap 0.6 mm)" };
    return { icon: "‚öñÔ∏è", text: "Denso IW27 (gap 0.6 mm)" };
  }

  // ====== SCHERM UPDATEN ======
  function update(){
    const Tc = parseFloat(document.getElementById('temp').value || "20");
    const RH = parseFloat(document.getElementById('rh').value || "50");
    const altitude = parseFloat(document.getElementById('alt').value || "0");
    const pressureInput = document.getElementById('pressure').value;
    const P = (pressureInput !== "")
      ? parseFloat(pressureInput)
      : standardPressureAtAltitude(altitude);
    const mode = document.getElementById('mode').value;
    const baselineInput = parseFloat(document.getElementById('baseline').value || "131");

    // Tekst bij modus
    document.getElementById('ruleNote').style.display   = (mode === 'rule')   ? 'block' : 'none';
    document.getElementById('prismaNote').style.display = (mode === 'prisma') ? 'block' : 'none';
    document.getElementById('subtitle').innerHTML =
      (mode === 'prisma')
        ? "Rotax Max Senior EVO ‚Ä¢ <span class='mode'>Prisma-modus</span> (baseline 133 @ 1.225 kg/m¬≥)"
        : "Rotax Max Senior EVO ‚Ä¢ <span class='mode'>Vuistregel-modus</span> (baseline aanpasbaar)";

    // Luchtdichtheid
    let rhoInput = document.getElementById('rho').value;
    let rho = (rhoInput !== "") ? parseFloat(rhoInput) : computeDensity(Tc, P, RH);

    // Sproeier
    const jet = recommendJet(rho, mode, baselineInput);
    const dPct = densityPercentDelta(rho);

    const jetEl = document.getElementById('jet');
    jetEl.textContent = (isFinite(rho) && isFinite(jet)) ? jet : "‚Äî";

    const flag = document.getElementById('flag');
    if (isFinite(dPct)){
      flag.textContent = (dPct > 0 ? "+" : "") + dPct.toFixed(1) + "% œÅ";
      flag.className = "tag " + (dPct > 0 ? "rich" : "lean");
    } else {
      flag.textContent = "‚Äî";
      flag.className = "tag";
    }

    // Bougie
    const plug = recommendPlug(rho);
    document.getElementById('plugIcon').textContent = plug.icon;
    document.getElementById('plugText').textContent = plug.text;
  }

  // ====== WEER VIA GPS + API ======
  let lastWeatherMeta = null;
  let pressureManualOverride = false;
  let weatherStatusBase = "";

  function coerceNumber(value, fallback){
    const num = parseFloat(value);
    return Number.isFinite(num) ? num : fallback;
  }

  function setPressureFromSeaLevel(mslPressure, altitudeMeters, tempCelsius){
    if (!Number.isFinite(mslPressure)) return;

    const altitude = Number.isFinite(altitudeMeters) ? altitudeMeters : 0;
    const temp = Number.isFinite(tempCelsius) ? tempCelsius : 15;
    const station = seaLevelToStationPressure(mslPressure, altitude, temp);
    document.getElementById('pressure').value = station.toFixed(1);
    return station;
  }

  function updateWeatherStatus(conversionText){
    const statusEl = document.getElementById('weatherStatus');
    const parts = [weatherStatusBase];
    if (conversionText) parts.push(conversionText);
    statusEl.textContent = parts.filter(Boolean).join(' ');
  }

  async function fetchWeatherFromGPS(){
    const statusEl = document.getElementById('weatherStatus');
    statusEl.textContent = "GPS zoeken‚Ä¶";

    if (!navigator.geolocation){
      statusEl.textContent = "GPS niet beschikbaar op dit apparaat.";
      return;
    }

    navigator.geolocation.getCurrentPosition(async (pos) => {
      const { latitude, longitude } = pos.coords;
      statusEl.textContent = "Weer ophalen‚Ä¶";

      try {
        // Voorbeeld-API: Open-Meteo (geen API-key nodig)
        const url =
          `https://api.open-meteo.com/v1/forecast?latitude=${latitude}&longitude=${longitude}` +
          `&current=temperature_2m,relative_humidity_2m,pressure_msl`;
        const res = await fetch(url);
        const data = await res.json();
        const cur = data.current;

        const temp = cur.temperature_2m;
        const pressureMsl = cur.pressure_msl;
        const altitude = parseFloat(document.getElementById('alt').value || "0");
        const stationPressure = seaLevelToStationPressure(pressureMsl, altitude, temp);
        const rh = cur.relative_humidity_2m;

        // Velden invullen
        document.getElementById('temp').value     = temp.toFixed(1);
        const station = setPressureFromSeaLevel(pressureMsl, altitude, temp);
        document.getElementById('rh').value       = rh.toFixed(0);

        // Laatste weerdata bewaren (voor offline start)
        localStorage.setItem("lastWeather", JSON.stringify({
          temp,
          pressure: stationPressure,
          pressure_msl: pressureMsl,
          altitude,
          rh,
          time: new Date().toISOString()
        }));

        lastWeatherMeta = {
          temp,
          pressure_msl: pressureMsl,
          altitude
        };
        pressureManualOverride = false;

        weatherStatusBase = "Weer geladen. Waarden zijn ingevuld en kun je handmatig aanpassen.";
        const conversionText = (altitude > 0 && pressureMsl !== station)
          ? `Druk omgerekend van ${pressureMsl.toFixed(1)} hPa (MSL) naar ${station.toFixed(1)} hPa op ${altitude.toFixed(0)} m.`
          : "";
        updateWeatherStatus(conversionText);
        update();
      } catch (e) {
        statusEl.textContent = "Kon weer niet ophalen (geen internet of API-fout).";
      }
    }, (err) => {
      document.getElementById('weatherStatus').textContent = "GPS afgewezen of mislukt.";
    });
  }

  // ====== INIT ======
  document.addEventListener('DOMContentLoaded', () => {
    // Inputs luisteren
    document.querySelectorAll("input:not(#alt),select").forEach(el =>
      el.addEventListener('input', update)
    );

    const pressureInput = document.getElementById('pressure');
    pressureInput.addEventListener('input', () => {
      pressureManualOverride = true;
    });

    const altitudeInput = document.getElementById('alt');
    altitudeInput.addEventListener('input', () => {
      const altitude = coerceNumber(altitudeInput.value, 0);
      if (!pressureManualOverride && lastWeatherMeta && Number.isFinite(lastWeatherMeta.pressure_msl)){
        const station = setPressureFromSeaLevel(
          lastWeatherMeta.pressure_msl,
          altitude,
          coerceNumber(lastWeatherMeta.temp, 15)
        );
        const conversionText = (altitude > 0 && Number.isFinite(station))
          ? `Druk omgerekend van ${lastWeatherMeta.pressure_msl.toFixed(1)} hPa (MSL) naar ${station.toFixed(1)} hPa op ${altitude.toFixed(0)} m.`
          : "";
        updateWeatherStatus(conversionText);
      }
      update();
    });

    // Knop: œÅ berekenen
    document.getElementById('useCalc').addEventListener('click', () => {
      const Tc = parseFloat(document.getElementById('temp').value || "20");
      const RH = parseFloat(document.getElementById('rh').value || "50");
      const altitude = parseFloat(document.getElementById('alt').value || "0");
      const pressureInput = document.getElementById('pressure').value;
      const P = (pressureInput !== "")
        ? parseFloat(pressureInput)
        : standardPressureAtAltitude(altitude);
      const rho = computeDensity(Tc, P, RH);
      document.getElementById('rho').value = rho.toFixed(3);
      update();
    });

    // Knop: weer via GPS
    document.getElementById('fetchWeather').addEventListener('click', fetchWeatherFromGPS);

    // Laatste weerdata uit localStorage (indien aanwezig)
    const saved = localStorage.getItem("lastWeather");
    if (saved){
      try {
        const w = JSON.parse(saved);
        weatherStatusBase = "Laatst gebruikte weerdata uit opslag. Controleer en corrigeer zo nodig.";
        if (w.temp     !== undefined) document.getElementById('temp').value     = w.temp;
        if (w.rh       !== undefined) document.getElementById('rh').value       = w.rh;

        const altitudeInput = parseFloat(document.getElementById('alt').value || "0");
        const pressureMslStored = Number(w.pressure_msl);
        let conversionText = "";
        if (isFinite(pressureMslStored)) {
          const altitudeForCalc = isFinite(altitudeInput) ? altitudeInput : Number(w.altitude) || 0;
          const tempForCalc = (typeof w.temp === "number") ? w.temp : parseFloat(w.temp) || 15;
          const station = setPressureFromSeaLevel(pressureMslStored, altitudeForCalc, tempForCalc);
          if (altitudeForCalc > 0 && Number.isFinite(station)){
            conversionText = `Druk opnieuw omgerekend uit ${pressureMslStored.toFixed(1)} hPa (MSL) met huidige hoogte.`;
          }
        } else if (w.pressure !== undefined) {
          document.getElementById('pressure').value = w.pressure;
        }
        updateWeatherStatus(conversionText);

        lastWeatherMeta = {
          temp: w.temp,
          pressure_msl: pressureMslStored,
          altitude: Number(w.altitude)
        };
        pressureManualOverride = false;
      } catch(e){}
    }

    // Eerste keer rekenen
    update();
  });
</script>
</body>
</html>
